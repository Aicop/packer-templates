{
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "http://debian.apt-get.eu/cd-images/current/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
      "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
      "iso_checksum_type": "md5",
      "output_directory": "output_debian75",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "/sbin/shutdown -hP now",
      "disk_size": 20480,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "qemuargs":
      [ 
	[ "-smp" , "2"]
      ],
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "installer",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "debian75",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command":
      [
            "<esc><wait>",
            "install <wait>",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
	    "keyboard-configuration/xkb-keymap=us ",
            "netcfg/get_hostname=debian75 ",
	    "netcfg/get_domain=auroracompute.com ",
            "fb=false debconf/frontend=noninteractive ",
            "console-setup/ask_detect=false <wait>",
            "console-keymaps-at/keymap=us <wait>",
            "<enter>"      ]
    }
  ],
  "provisioners":
  [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
		"scripts/packages.sh",
		"scripts/install-set-hostname-script.sh",
		"scripts/install-set-password-script.sh",
		"scripts/cleanup.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        }
  ]
}
