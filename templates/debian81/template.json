{
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "http://debian.apt-get.eu/cd-images/current/amd64/iso-cd/debian-8.1.0-amd64-netinst.iso",
      "iso_checksum": "1a311f9afb68d6365211b13b4342c40b",
      "iso_checksum_type": "md5",
      "output_directory": "packer_output",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "/sbin/shutdown -hP now",
      "disk_size": 20480,
      "format": "qcow2",
      "accelerator": "kvm",
      "qemuargs":
      [
        [ "-smp" , "2"]
      ],
      "http_directory": "../../httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "installer",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "debian81",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "15s",
      "boot_command":
      [
            "<esc><wait5>",
            "install <wait>",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian81.preseed ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "keyboard-configuration/xkb-keymap=us ",
            "netcfg/get_hostname=debian81 ",
            "netcfg/get_domain=auroracompute.com ",
            "fb=false debconf/frontend=noninteractive ",
            "console-setup/ask_detect=false <wait>",
            "console-keymaps-at/keymap=us <wait>",
            "<enter>"      ]
    }
  ],
  "provisioners":
  [
        {
            "type": "file",
            "source": "files/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
	    "type": "file",
	    "source": "files/cloud-set-guest-password-debian",
	    "destination": "/etc/network/if-up.d/cloud-set-guest-password"
	},
	{
            "type": "shell",
            "scripts": [
                "scripts/base.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
	{
            "type": "file",
            "source": "files/70_apt.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/70_apt.cfg"
        },
        {
            "type": "file",
            "source": "files/80_users.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/80_users.cfg"
        },
                {
            "type": "file",
            "source": "files/99_cloudstack.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/cleanup.sh",
                "../../scripts/zerodisk.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        }
  ]
}
