{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://mirror.pcextreme.nl/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "iso_checksum_type": "md5",
      "output_directory": "output_centos70",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 20480,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "qemuargs": [
        [ "-smp" , "2"]
      ],
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "installer",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "centos70",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    },
    {
      "type": "file",
      "source": "../../files/cloud-set-guest-password-centos",
      "destination": "/usr/lib/systemd/scripts/cloud-set-guest-password"
    },
    {
      "type": "file",
      "source": "../../files/cloud-set-guest-password.service",
      "destination": "/etc/systemd/system/cloud-set-guest-password.service"
    },
    {
      "type": "file",
      "source": "../../files/cloud-set-guest-sshkey-centos",
      "destination": "/usr/lib/systemd/scripts/cloud-set-guest-sshkey"
    },
    {
      "type": "file",
      "source": "../../files/cloud-set-guest-sshkey.service",
      "destination": "/etc/systemd/system/cloud-set-guest-sshkey.service"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/packages.sh",
        "scripts/scripts.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    }
  ]
}
