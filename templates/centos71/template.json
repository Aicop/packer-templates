{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://mirror.pcextreme.nl/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-NetInstall-1503.iso",
      "iso_checksum": "111379a06402e1e445c6aeee9401d031",
      "iso_checksum_type": "md5",
      "output_directory": "packer_output",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 20480,
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "qemuargs": [
        [ "-smp" , "2"]
      ],
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "installer",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "centos71",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/packages.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    },
    {
      "type": "file",
      "source": "files/cloud-set-guest-password-centos",
      "destination": "/usr/lib/systemd/scripts/cloud-set-guest-password"
    },
    {
      "type": "file",
      "source": "files/cloud-set-guest-password.service",
      "destination": "/etc/systemd/system/cloud-set-guest-password.service"
    },
    {
      "type": "file",
      "source": "files/80_users.cfg",
      "destination": "/etc/cloud/cloud.cfg.d/80_users.cfg"
    },
    {
      "type": "file",
      "source": "files/99_cloudstack.cfg",
      "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/scripts.sh",
        "scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    }
  ]
}
