{
    "variables":
    {
        "ncpu": "",
        "template_name": "",
        "disk_size": ""
    },
    "builders":
    [
        {
            "type": "qemu",
            "iso_url": "http://nl3.releases.ubuntu.com/precise/ubuntu-12.04.5-server-amd64.iso",
            "iso_checksum": "769474248a3897f4865817446f9a4a53",
            "iso_checksum_type": "md5",
            "output_directory": "packer_output",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "shutdown -P now",
            "disk_size": "{{user `disk_size`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": "true",
            "qemuargs":
            [
                [ "-smp" , "{{user `ncpu`}}"]
            ],
            "http_directory": "../../httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "root",
            "ssh_password": "installer",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "{{user `template_name`}}",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_wait": "15s",
            "boot_command":
            [
                "<esc><esc><enter><wait5>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/{{user `template_name`}}.preseed ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{user `template_name`}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ]
        }
    ],
    "provisioners":
    [
        {
            "type": "file",
            "source": "files/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
            "type": "file",
            "source": "files/cloud-set-guest-password-ubuntu",
            "destination": "/etc/init.d/cloud-set-guest-password"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/base.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "file",
            "source": "files/70_apt.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/70_apt.cfg"
        },
        {
            "type": "file",
            "source": "files/80_users.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/80_users.cfg"
        },
        {
            "type": "file",
            "source": "files/99_cloudstack.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
        },
        {
            "type": "file",
            "source": "files/DataSourceCloudStack.py",
            "destination": "/usr/share/pyshared/cloudinit/DataSourceCloudStack.py"
        },
        {
            "type": "file",
            "source": "../../httpdir/meta.data",
            "destination": "/var/opt/aurora-build-metadata.txt"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/cleanup.sh",
                "../../scripts/zerodisk.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        }
    ]
}
