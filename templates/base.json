{
    "variables": {
        "name": null,
        "url": null,
        "url_checksum": null,
        "boot_command": null
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `url`}}",
            "iso_checksum_url": "{{user `url_checksum`}}",
            "iso_checksum_type": "file",
            "vm_name": "{{user `name`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "cpus": 2,
            "memory": 2048,
            "disk_size": "20G",
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command": "{{user `boot_command`}}",
            "communicator": "ssh",
            "ssh_wait_timeout": "60m",
            "ssh_username": "root",
            "ssh_password": "installer",
            "http_directory": "files",
            "http_port_min": 8000,
            "http_port_max": 8000,
            "output_directory": "build_{{user `name`}}"
        }
    ],
    "post-processors": [
        [
            {
                "type": "shell-local",
                "command": "mv build_{{user `name`}}/{{user `name`}} build_{{user `name`}}/{{user `name`}}.qcow2"
            },
            {
                "type": "artifice",
                "files": [
                    "build_{{user `name`}}/{{user `name`}}.qcow2"
                ]
            },
            {
                "type": "checksum",
                "checksum_types": ["sha256"],
                "output": "build_{{user `name`}}/{{user `name`}}.checksum"
            },
            {
                "type": "manifest",
                "output": "build_{{user `name`}}/{{user `name`}}.json",
                "strip_path": true,
                "custom_data": {
                    "oscategory": "{{split (user `name`) \"-\" 0}}",
                    "osversion": "{{split (user `name`) \"-\" 1}}",
                    "template_slug": "{{user `name`}}"
                }
            }
        ]

    ]
}
