{
    "variables": {
        "name": null,
        "url": null,
        "url_checksum": null,
        "boot_command": null
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `url`}}",
            "iso_checksum_url": "{{user `url_checksum`}}",
            "iso_checksum_type": "file",
            "vm_name": "{{user `name`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "cpus": 2,
            "memory": 2048,
            "disk_size": "20G",
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command": "{{user `boot_command`}}",
            "communicator": "ssh",
            "ssh_wait_timeout": "60m",
            "ssh_username": "root",
            "ssh_password": "installer",
            "http_directory": "files",
            "http_port_min": 8000,
            "http_port_max": 8000,
            "output_directory": "build_{{user `name`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/generic/cloud-init.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/zzz-pcextreme.cfg"
        },
        {
            "type": "file",
            "source": "files/generic/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "command": "virt-sysprep -a build_{{user `name`}}/{{user `name`}}"
        },
        {
            "type": "shell-local",
            "command": "mv build_{{user `name`}}/{{user `name`}} build_{{user `name`}}/{{user `name`}}.qcow2"
        },
        {
            "type": "checksum",
            "checksum_types": ["sha256"],
            "output": "build_{{user `name`}}/{{user `name`}}_{{.ChecksumType}}.checksum"
        },
        {
            "type": "manifest",
            "output": "build_{{user `name`}}/{{user `name`}}_manifest.json"
        }
    ]
}
