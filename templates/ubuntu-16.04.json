{
    "variables": {
        "name": "ubuntu-16.04",
        "url": "http://compute.o.auroraobjects.eu/iso/ubuntu-16.04.7-server-amd64.iso",
        "iso_checksum": "sha256:b23488689e16cad7a269eb2d3a3bf725d3457ee6b0868e00c8762d3816e25848"
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "vm_name": "{{user `name`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "cpus": 2,
            "memory": 2048,
            "disk_size": "8G",
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command": [
                "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "/install/vmlinuz<wait>",
                " auto<wait>",
                " console-setup/ask_detect=false<wait>",
                " console-setup/layoutcode=us<wait>",
                " console-setup/modelcode=SKIP<wait>",
                " debconf/frontend=noninteractive<wait>",
                " debian-installer=en_US<wait>",
                " fb=false<wait>",
                " initrd=/install/initrd.gz<wait>",
                " kbd-chooser/method=us<wait>",
                " keyboard-configuration/layout=USA<wait>",
                " keyboard-configuration/variant=USA<wait>",
                " locale=en_US<wait>",
                " noapic<wait>",
                " netcfg/get_hostname=ubuntu1604<wait>",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/ubuntu-16.04.preseed ",
                " -- <wait>",
                "<enter><wait>"
            ],
            "communicator": "ssh",
            "vnc_bind_address": "0.0.0.0",
            "ssh_wait_timeout": "30m",
            "ssh_username": "root",
            "ssh_password": "installer",
            "http_directory": "files",
            "http_port_min": 8000,
            "http_port_max": 8100,
            "output_directory": "build_{{user `name`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/apt/ubuntu-16.04.sources",
            "destination": "/etc/apt/sources.list"
        },
        {
            "type": "file",
            "source": "files/generic/cloud-init.cfg",
            "destination": "/etc/cloud/cloud.cfg"
        },
        {
            "type": "file",
            "source": "files/generic/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        },
        {
            "type": "file",
            "source": "files/generic/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/ubuntu-16.04/post.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "shell",
            "inline":
            [
              "fstrim -v /"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "shell-local",
                "command": "mv build_{{user `name`}}/{{user `name`}} build_{{user `name`}}/{{user `name`}}.qcow2"
            },
            {
                "type": "artifice",
                "files": [
                    "build_{{user `name`}}/{{user `name`}}.qcow2"
                ]
            },
            {
                "type": "checksum",
                "checksum_types": [
                    "sha256"
                ],
                "output": "build_{{user `name`}}/{{user `name`}}.checksum"
            },
            {
                "type": "manifest",
                "output": "build_{{user `name`}}/{{user `name`}}.json",
                "strip_path": true,
                "custom_data": {
                    "oscategory": "{{split (user `name`) \"-\" 0}}",
                    "osversion": "{{split (user `name`) \"-\" 1}}",
                    "template_slug": "{{user `name`}}"
                }
            }
        ]
    ]
}
