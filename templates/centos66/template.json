{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://mirror.pcextreme.nl/centos/6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "iso_checksum_type": "md5",
      "output_directory": "packer_output",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 20480,
      "format": "qcow2",
      "accelerator": "kvm",
      "qemuargs": [
        [ "-smp" , "2"]
      ],
      "http_directory": "../../httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "installer",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "centos66",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart/centos66.ks<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/cloud-set-guest-password-centos",
      "destination": "/etc/init.d/cloud-set-guest-password"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/packages.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    },
    {
      "type": "file",
      "source": "files/80_users.cfg",
      "destination": "/etc/cloud/cloud.cfg.d/80_users.cfg"
    },
    {
      "type": "file",
      "source": "files/99_cloudstack.cfg",
      "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
    },
    {
      "type": "file",
      "source": "../../httpdir/meta.data",
      "destination": "/var/opt/aurora-build-metadata.txt"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ],
      "execute_command": "sh '{{.Path}}'"
    }
  ]
}
